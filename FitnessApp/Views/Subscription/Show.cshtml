@model IEnumerable<FitnessApp.Models.Subscription>
@{
    ViewBag.Title = "Абонементы";
}
@using FitnessApp.Models;

<div>
    <h3>Абонементы</h3>
    <table class="table">
        <tr>
            <td><p>Название</p></td>
            <td><p>Цена</p></td>
            <td><p>Количество дней</p></td>
            <td><p>Количество дней заморозки</p></td>
            <td></td>
        </tr>
        @foreach (var subscription in Model)//Razor - движок представлений, который позволяет с html перейти к c#
        {
            <tr>
                <td><p>@subscription.Name</p></td>
                <td><p>@subscription.Price</p></td>
                <td><p>@subscription.AmountDays</p></td>
                <td><p>@subscription.PauseDays</p></td>
                <td>
                    <p>
                        @Html.ActionLink("Подробнее", "OpenInformation", new { subscriptionId = subscription.Id })
                    </p>
                </td>
            </tr>
        }
    </table>
</div>